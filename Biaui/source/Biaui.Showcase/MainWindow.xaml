                                         Margin="0,4,0,0"
                                         AlphaMaximum="+10000"
                                         AlphaMinimum="-10000"
                                         BlueMaximum="+10000"
                                         BlueMinimum="-10000"
                                         GreenMaximum="+10000"
                                         GreenMinimum="-10000"
                                         RedMaximum="+10000"
                                         RedMinimum="-10000"
                                         Red="1"
                                         Green="0.5"
                                         Blue="0.25" />
