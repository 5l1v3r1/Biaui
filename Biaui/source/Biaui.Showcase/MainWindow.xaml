                                          Caption="Simple"
                                          Maximum="1000"
                                          Minimum="0"
                                          Mode="Simple"
                                          SliderMaximum="100"
                                          SliderMinimum="0"
                                          UnitString=" %"
                                          Value="87.654" />

                <controls:BiaNumberEditor Margin="0,4,0,0"
                                          Caption="WideRange"
                                          Maximum="10000"
                                          Minimum="-10000"
                                          Mode="WideRange"
                                          SliderMaximum="10000"
                                          SliderMinimum="-10000"
                                          UnitString=" メートル"
                                          Value="87.654" />

