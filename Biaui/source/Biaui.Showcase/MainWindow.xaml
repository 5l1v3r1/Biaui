                        <controls:BiaToggleButton Grid.Row="0"
                                                  Grid.Column="1"
                                                  Margin="1,0,0,0"
                                                  Content="A1" />
                        <controls:BiaToggleButton Grid.Row="0"
                                                  Grid.Column="2"
