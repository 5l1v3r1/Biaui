                            HorizontalAlignment="Left"
                            Orientation="Vertical" />
                    <Slider Height="80"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Left"
                            IsEnabled="False"
                            Orientation="Vertical" />

                </StackPanel>

