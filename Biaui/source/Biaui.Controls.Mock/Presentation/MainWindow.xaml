<controls:BiaWindow x:Class="Biaui.Controls.Mock.Presentation.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behavior="clr-namespace:Biaui.Controls.Mock.Control.Behavior"
                    xmlns:biaui="clr-namespace:Biaui;assembly=Biaui"
                    xmlns:controls="clr-namespace:Biaui.Controls;assembly=Biaui"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    Title="Biaui.Controls.Mock"
                    Width="800"
                    Height="450"
                    WindowStartupLocation="CenterScreen"
                    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <behavior:WindowDisposeDataContextOnClosedBehavior />
    </i:Interaction.Behaviors>

    <TabControl Margin="8">
        <TabItem Header="BiaNumberEditor">
            <StackPanel Width="280"
                        Margin="4,4,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Orientation="Vertical">
                <StackPanel.Resources>
                    <Style BasedOn="{StaticResource {x:Type controls:BiaNumberEditor}}" TargetType="{x:Type controls:BiaNumberEditor}">
                        <Setter Property="Margin" Value="0,4,0,0" />
                        <Setter Property="UnitString" Value="% " />
                    </Style>

                    <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="{x:Type TextBox}">
                        <Setter Property="Margin" Value="0,4,0,0" />
                    </Style>
                </StackPanel.Resources>

                <controls:BiaNumberEditor Caption="MinMaxValue" Value="{Binding BiaNumberEditorViewModel.MinMaxValue}" />
                <controls:BiaNumberEditor Caption="SpinValue" Value="{Binding BiaNumberEditorViewModel.SpinValue}" />
                <controls:BiaNumberEditor Caption="TextInputValue" Value="{Binding BiaNumberEditorViewModel.TextInputValue}" />
                <controls:BiaNumberEditor Caption="SliderValueSimple" Value="{Binding BiaNumberEditorViewModel.SliderValueSimple}" />
                <controls:BiaNumberEditor Caption="SliderValueWideRange" Value="{Binding BiaNumberEditorViewModel.SliderValueWideRange}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="BiaColorPicker">
            <Grid Margin="4,8" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="160" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <controls:BiaColorPicker x:Name="ColorPicker"
                                         Grid.ColumnSpan="3"
                                         Height="80" />

                <controls:ClippingBorder Grid.Row="1"
                                         Grid.Column="0"
                                         Margin="0,8,0,0"
                                         Background="{DynamicResource TextBoxBorderBrushKey}"
                                         BorderBrush="{DynamicResource TextBoxBorderBrushKey}"
                                         BorderThickness="1"
                                         CornerRadius="{x:Static biaui:Constants.GroupCornerRadius}">
                    <Grid>
                        <Grid.Resources>
                            <Style BasedOn="{StaticResource {x:Type controls:BiaNumberEditor}}" TargetType="{x:Type controls:BiaNumberEditor}">
                                <Setter Property="Minimum" Value="0" />
                                <Setter Property="Maximum" Value="1" />
                                <Setter Property="SliderMinimum" Value="0" />
                                <Setter Property="SliderMaximum" Value="1" />
                                <Setter Property="Increment" Value="0.1" />
                                <Setter Property="CornerRadius" Value="0" />
                                <Setter Property="IsVisibleBorder" Value="False" />
                            </Style>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <controls:BiaNumberEditor Grid.Row="0"
                                                  Caption="Red"
                                                  Value="{Binding Path=Red, ElementName=ColorPicker, Mode=TwoWay}" />

                        <controls:BiaNumberEditor Grid.Row="1"
                                                  Margin="0,1,0,0"
                                                  Caption="Green"
                                                  Value="{Binding Path=Green, ElementName=ColorPicker, Mode=TwoWay}" />

                        <controls:BiaNumberEditor Grid.Row="2"
                                                  Margin="0,1,0,0"
                                                  Caption="Blue"
                                                  Value="{Binding Path=Blue, ElementName=ColorPicker, Mode=TwoWay}" />
                    </Grid>
                </controls:ClippingBorder>

                <controls:ClippingBorder Grid.Row="1"
                                         Grid.Column="2"
                                         Margin="0,8,0,0"
                                         Background="{DynamicResource TextBoxBorderBrushKey}"
                                         BorderBrush="{DynamicResource TextBoxBorderBrushKey}"
                                         BorderThickness="1"
                                         CornerRadius="{x:Static biaui:Constants.GroupCornerRadius}">
                    <Grid>
                        <Grid.Resources>
                            <Style BasedOn="{StaticResource {x:Type controls:BiaNumberEditor}}" TargetType="{x:Type controls:BiaNumberEditor}">
                                <Setter Property="Minimum" Value="0" />
                                <Setter Property="Maximum" Value="1" />
                                <Setter Property="SliderMinimum" Value="0" />
                                <Setter Property="SliderMaximum" Value="1" />
                                <Setter Property="Increment" Value="0.1" />
                                <Setter Property="CornerRadius" Value="0" />
                                <Setter Property="IsVisibleBorder" Value="False" />
                            </Style>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <controls:BiaNumberEditor Grid.Row="0"
                                                  Caption="Hue"
                                                  Value="{Binding Path=Hue, ElementName=ColorPicker, Mode=TwoWay}" />

                        <controls:BiaNumberEditor Grid.Row="1"
                                                  Margin="0,1,0,0"
                                                  Caption="Saturation"
                                                  Value="{Binding Path=Saturation, ElementName=ColorPicker, Mode=TwoWay}" />

                        <controls:BiaNumberEditor Grid.Row="2"
                                                  Margin="0,1,0,0"
                                                  Caption="Value"
                                                  Value="{Binding Path=Value, ElementName=ColorPicker, Mode=TwoWay}" />
                    </Grid>
                </controls:ClippingBorder>
            </Grid>
        </TabItem>
    </TabControl>
</controls:BiaWindow>