<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Biaui.Controls;assembly=Biaui">
    <Style TargetType="TextBlock" x:Key="FirstSubGroupTextBlockStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="TextBlock" x:Key="SubGroupTextBlockStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Margin" Value="0,16,0,8" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="SubGroupTableGridStyle" TargetType="controls:BiaTableGrid">
        <Setter Property="Columns" Value="2" />
        <Setter Property="Spacing" Value="32,16" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
</ResourceDictionary>