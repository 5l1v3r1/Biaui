<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="FirstSubGroupTextBlockStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Margin" Value="0,0,0,8"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
    </Style> 
    
    <Style TargetType="TextBlock" x:Key="SubGroupTextBlockStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Margin" Value="0,16,0,8"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
    </Style> 
</ResourceDictionary>